<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScientificFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            style="@style/HeaderText"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginVertical="5dp"
            android:paddingBottom="5dp"
            android:text="Scientifc Calculator" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <TextView
                android:id="@+id/input"
                style="@style/HeaderText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:text="Enter numbers to be calculated"
                android:textSize="15sp"

                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginVertical="50dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonsin"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Sin"
                    android:textAlignment="center"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/buttoncos"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Cos"
                    android:textAlignment="center"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/buttontan"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="tan"
                    android:textAlignment="center"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/buttonln"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ln"
                    android:textSize="15sp" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginVertical="100dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonsinh"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Sinh"
                    android:textAlignment="center"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/buttoncosh"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Cosh"
                    android:textAlignment="center"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/buttontanh"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="tanh"
                    android:textAlignment="center"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/buttonsqrt"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sqrt"
                    android:textSize="15sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginVertical="150dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonfloor"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="floor"
                    android:textAlignment="center"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/buttonceil"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="ceil"
                    android:textAlignment="center"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/buttonfact"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="!"
                    android:textAlignment="center"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/buttonlog"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="log"
                    android:textSize="15sp" />
            </LinearLayout>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            >

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="15sp"
                android:textAlignment="center"
                android:layout_weight="3"
                style="?android:attr/borderlessButtonStyle"
                />

            <Button
                android:id="@+id/button2"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                style="?android:attr/borderlessButtonStyle"
                android:layout_weight="3"
                android:textAlignment="center"
                />

            <Button
                android:id="@+id/button3"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                style="?android:attr/borderlessButtonStyle"
                android:textAlignment="center"
                android:layout_weight="3"
                />

            <Button
                android:id="@+id/buttondiv"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="/"
                android:textSize="15sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="15sp"
                android:textAlignment="center"
                android:layout_weight="3"
                style="?android:attr/borderlessButtonStyle"
                />

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:text="5"
                style="?android:attr/borderlessButtonStyle"
                android:layout_weight="3"
                android:textAlignment="center"
                />

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                style="?android:attr/borderlessButtonStyle"
                android:text="6"
                android:textAlignment="center"
                android:layout_weight="3"/>

            <Button
                android:id="@+id/buttonmultiply"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="*"
                android:textSize="15sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:layout_marginBottom="7dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                style="?android:attr/borderlessButtonStyle"
                android:layout_height="wrap_content"
                android:text="7"
                android:textSize="15sp"
                android:textAlignment="center"
                android:layout_weight="3"/>

            <Button
                android:id="@+id/button8"
                android:textSize="15sp"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:layout_weight="3"
                android:textAlignment="center" />

            <Button
                android:id="@+id/button9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/borderlessButtonStyle"
                android:text="9"
                android:textSize="15sp"
                android:textAlignment="center"
                android:layout_weight="3"/>

            <Button
                android:id="@+id/buttonadd"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            >

            <Button
                android:id="@+id/buttondecimal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:textSize="25sp"
                style="?android:attr/borderlessButtonStyle"
                android:textAlignment="center"
                android:layout_weight="3"/>

            <Button
                android:id="@+id/button0"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                style="?android:attr/borderlessButtonStyle"
                android:layout_weight="3"
                android:textAlignment="center" />

            <Button
                android:id="@+id/buttonequal"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                style="?android:attr/borderlessButtonStyle"
                android:textAlignment="center"
                android:layout_weight="3"/>

            <Button
                android:id="@+id/buttonsub"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-"

                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            >

            <Button
                android:id="@+id/buttonbracketopen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="("
                android:textSize="15sp"
                style="?android:attr/borderlessButtonStyle"
                android:textAlignment="center"
                android:layout_weight="3"/>

            <Button
                android:id="@+id/buttonbracketclose"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:paddingLeft="30dp"
                android:layout_height="wrap_content"
                android:text=")"
                android:layout_weight="3"
                style="?android:attr/borderlessButtonStyle"
                android:textAlignment="center" />

            <Button
                android:id="@+id/buttonexpo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="^"
                android:textSize="15sp"
                android:paddingLeft="40dp"
                style="?android:attr/borderlessButtonStyle"
                android:textAlignment="center"
                android:layout_weight="3"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:id="@+id/delete"
                android:textSize="20sp"
                android:layout_weight="1"
                style="?android:attr/borderlessButtonStyle"

                />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>